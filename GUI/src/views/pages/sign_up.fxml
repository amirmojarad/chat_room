<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<FlowPane alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="model_views.controllers.ControllerSignUp">
    <children>
        <ImageView fitHeight="600.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../resources/pictures/Iconos%20Chat%20en%20lleno%20-%20Descarga%20gratuita,%20PNG%20y%20SVG.png"/>
            </image>
        </ImageView>
        <FlowPane alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="200.0"
                  prefWidth="200.0">
            <children>
                <TextField fx:id="username" onMouseClicked="#tapOnTextFields" maxWidth="1.7976931348623157E308"
                           minWidth="-Infinity" prefWidth="200.0" promptText="Username">
                    <FlowPane.margin>
                        <Insets top="50.0"/>
                    </FlowPane.margin>
                </TextField>
                <Text id="usernameErrorText" fx:id="usernameError" fill="#d70e0e" strokeType="OUTSIDE" strokeWidth="0.0"
                      textAlignment="CENTER" visible="false">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Text>
                <TextField fx:id="fullName" onMouseClicked="#tapOnTextFields" maxWidth="1.7976931348623157E308"
                           minWidth="-Infinity" prefWidth="200.0" promptText="FullName">
                    <FlowPane.margin>
                        <Insets top="20.0"/>
                    </FlowPane.margin>
                </TextField>
                <PasswordField fx:id="password" onMouseClicked="#tapOnTextFields" maxWidth="1.7976931348623157E308"
                               minWidth="-Infinity" prefWidth="200.0" promptText="Password">
                    <FlowPane.margin>
                        <Insets top="20.0"/>
                    </FlowPane.margin>
                </PasswordField>
                <TextField fx:id="port" onMouseClicked="#tapOnTextFields" maxWidth="1.7976931348623157E308"
                           minWidth="-Infinity" prefWidth="200.0" promptText="Server Port">
                    <FlowPane.margin>
                        <Insets top="20.0"/>
                    </FlowPane.margin>
                </TextField>
                <Text id="portErrorText" onMouseClicked="#tapOnTextFields" fx:id="portText" fill="#d70e0e"
                      strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" visible="false">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Text>
                <Button fx:id="submitButton" style="-fx-background-color: #8ED1FE;" onMouseClicked="#tapOnSignUpButton"
                        maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" prefWidth="200.0"
                        text="Sign Up">
                    <FlowPane.margin>
                        <Insets top="20.0"/>
                    </FlowPane.margin>
                </Button>
                <Text fx:id="text" fill="#21adc9" onMouseClicked="#signInTapped" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Already Have an Account?" underline="true">
                    <FlowPane.margin>
                        <Insets top="10.0"/>
                    </FlowPane.margin>
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Text>
            </children>
            <FlowPane.margin>
                <Insets left="50.0"/>
            </FlowPane.margin>
        </FlowPane>
    </children>
</FlowPane>
